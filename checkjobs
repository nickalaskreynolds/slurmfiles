#!/bin/bash
# Normal Colors
inf=0
while getopts ":fh" opt; do
    case $opt in
        f)
          inf=1
          ;;
        h)
          echo "Check jobs in slurm nicely. If you want to call infinite runs use -f" >&2
	  exit 1
          ;;
        \?)
          echo "Invalid option: -$OPTARG"
          exit 1
          ;;
    esac
done

Green='\e[0;32m'        # Green
Yellow='\e[0;33m'       # Yellow
NC="\e[m"               # Color Reset
ALERT=${BWhite}${On_Red} # Bold White on red background

uname=`whoami`

# run infinite
while : ; do
    qnum=$(squeue --start -u ${uname} | sed '1d' | wc | awk '{print $1}')
    cjob="$(( `squeue -u $uname | sed '1d' | wc | awk '{print $1}'` - $qnum ))"
    cjtm=$(squeue -u ${uname} --states RUNNING| sed '1d' |head -n1 |awk '{print $6}')
    fjtm=$(squeue -u ${uname} -l --states RUNNING| sed '1,2d' |head -n1 |awk '{print $7}')
    ctime=$(date +%s)
    if [[ $queue == "N/A" ]]; then queue="";fi
    if [[ $queue != "" ]] ; then qtime=`date -d"${queue}" +%s`; else qtime=$ctime ;fi
    timedif="$(( $qtime - $ctime))"
    convertsecs() {
     ((h=${1}/3600))
     ((m=(${1}%3600)/60))
     ((s=${1}%60))
     printf "%02d:%02d:%02d\n" $h $m $s
    }
    if [[ ${cjob} >0 ]] ; then
        echo -e "${Green}Current jobs: ${cjob}, runtime: ${cjtm} of ${fjtm}${NC}"
    else
        echo -e "${Yellow}No jobs running ${NC}"
    fi
    if [[ ${qnum} == 0 ]] ; then
        echo -e "${Yellow}No jobs queued${NC}"
    elif [[ $queue != "" ]] ; then
        echo -e "${Green}#Jobs: ${qnum}, Starting $(convertsecs ${timedif}) from now.${NC}"
    else
        echo -e "${Green}#Jobs: ${qnum}, Start time not set.${NC}"
    fi
    # break if not infinite
    if [ "$inf" -eq "0" ]; then
        exit 0;
    fi
    echo "`date '+%a %d %b %Y %H:%M:%S'` (`date --utc '+%H:%M:%S'`)"
    echo '#####################################################'
    sleep 60
done

# end of script
